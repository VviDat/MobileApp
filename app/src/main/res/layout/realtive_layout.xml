<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    >

    <TextView
        android:id="@+id/tv11"
        android:layout_width="120dp"
        android:layout_height="260dp"
        android:layout_margin="2dp"
        android:background="#57F402" />

    <TextView
        android:id="@+id/tv22"
        android:layout_width="120dp"
        android:layout_height="260dp"
        android:layout_margin="2dp"
        android:layout_below="@+id/tv11"
        android:background="#E4022F" />

    <TextView
        android:id="@+id/tv33"
        android:layout_width="232dp"
        android:layout_height="172dp"
        android:layout_margin="2dp"
        android:layout_alignParentRight="true"
        android:background="#02E4CA" />

    <TextView
        android:id="@+id/tv44"
        android:layout_width="232dp"
        android:layout_height="172dp"
        android:layout_below="@+id/tv33"
        android:layout_alignParentRight="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="2dp"
        android:background="#BB02E4" />

    <TextView
        android:id="@+id/tv55"
        android:layout_width="232dp"
        android:layout_height="172dp"
        android:layout_margin="2dp"
        android:layout_below="@+id/tv44"
        android:layout_alignParentRight="true"
        android:background="#02E495" />

    <SeekBar
        android:id="@+id/sliderChangeColor1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="4dp"
        android:background="#fff"
        android:max="255"
        >

    </SeekBar>
</RelativeLayout>